<div class="m-3">
  <h1> <%= @task.title %></h1>
  <p ><%= @task.details %></p>

  <% if @task.completed? %>
    <p><i class="fa-regular fa-square-check"></i> This task is completed </p>

  <% else %>
    <p><i class="fa-regular fa-square"></i> This task is not completed yet </p>
  <% end %>

</div>

<div class = "link">
  <p class="m-3">
  <%= link_to 'Back to list', tasks_path, class:"btn btn-secondary" %>
  </p>

  <p class="m-3">
  <%= link_to 'Edit the task', edit_task_path, class:"btn btn-primary" %>
  </p>

  <p class="m-3"><i class="fa-solid fa-trash-can"></i>
    <%= link_to "Delete",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </p>

</div>
